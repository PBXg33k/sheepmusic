{# user \BlackSheep\LastFmBundle\Entity\LastFmUserEmbed#}
{% extends app.request.xmlHttpRequest
? 'Layout/ajaxLayout.html.twig'
: 'Layout/layout.html.twig'%}


{% block content %}
    {% if token is defined %}
    <a href="http://www.last.fm/api/auth/?api_key={{ key }}&token={{ token }}">Connect LastFm</a>
    {% endif %}
    {% if user is defined %}
        <h1>LastFm account</h1>
        <table class="table table-striped">
            <tbody>
            <tr>
                <th scope="row">username</th>
                <td>{{ user.lastFm.lastFmUserName }}</td>
            </tr>
            <tr>
                <th scope="row">token</th>
                <td>{{  user.lastFm.lastFmToken }}</td>
            </tr>
            </tbody>
        </table>

    {% endif %}
{% endblock %}