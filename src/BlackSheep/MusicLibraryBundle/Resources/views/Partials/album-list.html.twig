{% if album.cover is not null %}
    {% set backgroundImage = album.cover %}
{% else %}
    {% set backgroundImage = asset('frontend/img/default.png') %}
{% endif %}
<div class="album-card">
    <div class="mdl-card__title mdl-card--expand" style="background: url({{ backgroundImage }}) center / cover;">
        <h2 class="mdl-card__title-text">{{ album.name }}</h2>
        <div>
            <a href="{{ url('library_artist',{'artist': album.artist.id}) }}">
                {{ album.artist.name }}
            </a>
        </div>
    </div>
    <div class="text">
        {{ album.updatedAt|date }}
    </div>
    <div class="actions">
        <ul class="mdl-list">
            {% for song in album.getSongs() %}
                <li class="mdl-list__item mdl-list__item--two-line">
                    <span class="mdl-list__item-primary-content">
                        <i class="material-icons mdl-list__item-icon">album</i>
                        <span>{{ song.title }}</span>
                        <span class="mdl-list__item-sub-title">{{ song.length|duration }}</span>
                    </span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>