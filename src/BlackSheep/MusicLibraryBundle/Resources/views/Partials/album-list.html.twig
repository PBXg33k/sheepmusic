{% if album.cover is not null %}
    {% set backgroundImage = asset(album.cover) %}
{% else %}
    {% set backgroundImage = asset('frontend/img/default.png') %}
{% endif %}
<div class="album-card">
    <div class="card">
        <div class="mdl-card__title mdl-card--expand" style="background: url({{ backgroundImage }}) center / cover;">
            <h2 class="mdl-card__title-text">{{ album.name }}</h2>
            <div>
                <a href="{{ url('library_artist',{'artist': album.artist.id}) }}">
                    {{ album.artist.name }}
                </a>
            </div>
        </div>
        <div class="text">
            {{ album.updatedAt|date }}
        </div>
        <div class="actions">
            <ul class="list-group">
                {% for song in album.getSongs() %}
                    <li class="list-group-item">

                        <h4 class="list-group-item-heading">
                            <i class="material-icons mdl-list__item-icon">album</i>{{ song.title }}
                        </h4>
                        <p class="list-group-item-text">{{ song.length|duration }}</p>

                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>