{% extends app.request.xmlHttpRequest
? 'Layout/ajaxLayout.html.twig'
: 'Layout/layout.html.twig'%}

{% block content %}
    <div class="artist-backdrop" style="background-image: url({% if artist.albumArt is not null %}{{ artist.albumArt }}{% endif %})">
    </div>
    {% include '@BlackSheepMusicLibrary/Artist/info-bar.html.twig' with {'artist': artist} only %}

    <div class="album-list">
    {% for album in artist.albums %}
        {% include '@BlackSheepMusicLibrary/Partials/album-card.html.twig' with {'album': album} only %}
    {% endfor %}
    </div>

{% endblock %}

