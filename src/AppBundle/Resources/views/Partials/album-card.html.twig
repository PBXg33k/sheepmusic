{% if album.cover is not null %}
    {% set backgroundImage = album.cover %}
{% else %}
    {% set backgroundImage = asset('frontend/img/default.png') %}
{% endif %}
<div class="card album-card">
    <img class="card-img-top"
         src='{{ backgroundImage }}'/>
    <div class="card-img-overlay">
        <h4 class="card-title">
            <a href="{{ url('library_album',{'album':album.slug }) }}">
                {{ album.name }}
            </a>
        </h4>
        <p class="card-text">
            <a href="{{ url('library_artist',{'artist': album.artist.id}) }}">
                {{ album.artist.name }}
            </a>
        </p>
        <div class="card-footer text-muted actions">
            <a href="{{ url('library_album',{'album':album.slug }) }}"
               class="btn btn-primary-outline">
            detail
            </a>
        </div>
    </div>

</div>