{% if album.cover is not null %}
    {% set backgroundImage = album.cover %}
{% else %}
    {% set backgroundImage = asset('frontend/img/default.png') %}
{% endif %}
<div class="card album-card">
    <a href="{{ url('library_album',{'album':album.slug }) }}" >
        <img class="card-img-top" src='{{ backgroundImage }}'/>
    </a>
    <div class="card-block">
        <h4 class="card-title activator">
            {{ album.artist.name }}<i class="material-icons right">more_vert</i>
        </h4>
        <p class="card-text">
            {{ album.name }}
        </p>
    </div>
    <div class="card-reveal">
        <h4 class="card-title grey-text text-darken-4">
            {{ album.artist.name }} <br />
            {{ album.name }}
            <i class="material-icons close right">close</i>
        </h4>

        <a href="#"
           class="btn btn-primary-outline"
        >
            Play all
        </a>
    </div>
</div>