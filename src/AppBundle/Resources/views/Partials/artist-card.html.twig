{% if artist.slug %}
    <div class="card artist-card">
        <a href="{{ path('library_artist', {'artist' : artist.slug } ) }}">

            <img class="card-img-top"
                 src='{% if artist.image is not null %}
                            {{ artist.image }}{% else %}{{ asset('frontend/img/default.png') }}
                      {% endif %}'/>
        </a>
        <div class="card-block">
            <h4 class="card-title activator">
                {{ artist.name }}
                <i class="material-icons right">more_vert</i>
            </h4>
        </div>
        <div class="card-reveal">
            <h4 class="card-title grey-text text-darken-4">
                {{ artist.name }}
                <i class="material-icons close right">close</i>
            </h4>

            <div>Added on:
                <span class="label label-info"> {{ artist.createdAt | localdatetime }}</span>
            </div>
            <div>Updated on:
                <span class="label label-info"> {{ artist.updatedAt | localdatetime }}</span>
            </div>
            <a href="{{ path('library_artist', {'artist' : artist.slug } ) }}"
               class="btn btn-primary-outline"
            >
                show albums
            </a>
        </div>
    </div>
{% endif %}
