{# @var album \BlackSheep\MusicLibraryBundle\Entity\Albums#}
{# @var artist \BlackSheep\MusicLibraryBundle\Entity\Artists#}
{% set artist = album.artist %}
<div class="info-bar album media">
    <a class="btn btn-floating btn-play-album">
        <i class="material-icons">play_arrow</i>
    </a>
    <img class="info-bar-image"
         src="{% if album.cover is not null %}{{ album.cover }}{% else %}{{ album.lastFmInfo.image.large }}{% endif %}"/>
    <div class="info-bar-content media-body">
        <h3 class="artist-name">{{ artist.name }}</h3>
        <h1 class="album-name">{{ album.name }}</h1>
        <span class="label label-info">{{ artist.playCount }}</span>
        <span class="label label-info">{{ album.createdAt | localdatetime('d-M-Y') }}</span>
        <span class="label label-info">{{ album.updatedAt | localdatetime('d-M-Y') }}</span>
    </div>
</div>