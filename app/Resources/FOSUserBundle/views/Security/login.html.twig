{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block extra_layout_classes %}center login{% endblock %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">


        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        <div class="form-group bmd-form-group">

            <input class="form-control" type="text" id="username" name="_username"
                   value="{{ last_username }}" required="required"/>
            <label class="bmd-label-floating" for="username">{{ 'security.login.username'|trans }}</label>
        </div>
        <div class="form-group bmd-form-group">

            <input class="form-control" type="password" id="password" name="_password"
                   required="required"/>
            <label class="bmd-label-floating" for="password">{{ 'security.login.password'|trans }}</label>

        </div>
        <span class="bmd-form-group is-filled">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="_remember_me" value="on">
                    <span class="checkbox-decorator"><span class="check"></span></span> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </span>
        <div class="form-actions">


            <input class="btn btn-primary-outline" type="submit"
                   id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
        </div>

    </form>

{% endblock fos_user_content %}
